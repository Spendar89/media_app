<div class="row media_row">
	<div class="sc_parent box col3 media_parent" video_id= "<%= sound['id'] %>" data-uploaded="<%= sound['uploaded']%>" style="background: white; border-radius: 1px; width: 220px">
		<div class="row">
				<%= render :partial => "media/rating_div", :locals => {:medium => sound} %>
			<div clas="twelve columns">	
				<object height="90" width="87%" data-start="<%= sound['start'] %>" id="<%= sound['id'] %>" class="sc-player"   classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000">
					<param name="movie" value="http://player.soundcloud.com/player.swf?url=<%= sound['url']%>&enable_api=true&auto_play=true&single_active=false&object_id=<%= sound['id'] %>"></param>
					<param name="allowscriptaccess" value="always"></param>
					<embed allowscriptaccess="always" height="90" src="http://player.soundcloud.com/player.swf?url=<%= sound['url']%>&sharing=false&buying=false&liking=false&download=false&show_artwork=false&show_comments=false&show_playcount=false&show_user=false&enable_api=true&auto_play=true&single_active=false&object_id=<%= sound['id'] %>" type="application/x-shockwave-flash" width="87%" name="<%= sound['id'] %>"></embed>
				</object>
			</div>
		</div>
		<%= render :partial => "media/media_info", :locals => {:medium => sound} %>
</div>
<div id="<%= sound['id']%>-zoom-modal" class="reveal-modal xlarge" style="min-width: 600px">
</div>