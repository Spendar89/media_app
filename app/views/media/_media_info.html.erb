<div class="info-div row" style="margin-top: 0%; margin-left: -3pt">
	<div class="twelve columns">
		<h6 style="color: #5B8DBC; line-height: 15px;"><%= medium['title'] %></h6>	
	</div>
</div>
<div class="row">
	<div class="twelve columns" style="margin-bottom: 4%; margin-left: 2%">
		<% unless medium['tags'].nil? %>
			<% medium['tags'].split(",").each do |tag| %>
				<%= link_to "##{tag}","/tags/#{tag}", :class => "tag"%>
			<% end %>
		<% end %>
	</div>
</div>
<div class="twelve columns user-info">
	<div class="twelve columns" style="margin-left: -5%">
		<div class="row one columns">
			<% media_user = User.find(medium['user']) %>
			<%  user_image = media_user.image unless media_user.nil? %>
			<a href="#"><img src="<%=user_image %>" style="border: none; width: auto; height: 30px; margin-right: 1px"></a>
		</div>
		<div class="eleven columns" style="font-size: 8pt">
			<% page_name =  $redis.get "page:#{medium['page_id']}:name" %>
			<%= link_to media_user.name, user_path(media_user) , :class=>"box-link"%> on <%= Time.at(medium['uploaded'].to_i).strftime("%b %e")  %> in <%=link_to page_name, "/pages/#{medium['page_id']}", :method => 'get', :class=>"box-link" %>
		</div>
	</div>
	<div class="row twelve columns">
		<% liked_by = $redis.smembers "media:#{medium["id"]}:liked_by" %>
		<% unless liked_by.empty? %>
			<div class ="liked-by-div">
				<span class="glyph general" style="color: grey; float: left; margin-right: 2%; font-size: 10pt">b</span>
					<% liked_by.each_with_index do |user_id, i| %>
						<% liked_user = User.find(user_id) %>
						<%= link_to liked_user.name + "#{',' unless i == liked_by.length - 1}", user_path(media_user) %>
					<% end %>
			</div>
		<% end %>	
	</div>
</div>
