<% if @error.nil? %>
	$('#add_media_div').trigger('reveal:close');
	$('.media_div').prepend("<%=j render(:partial => 'create', :locals => {:medium => 
		                     @new_media})%>");
	$('#masonry-container').masonry('reload');
	$('.add-media-partial-div').html("<%=j  render(:partial => 'pages/add_media_form', 
									  :locals => { :page_id => @page_id, :category_id => 
									  @category_id }) %>");
	<% if @new_media['type'] == "youtube" %>
		var parentId = $('.yt_parent').first().attr('id');
		var newPlayer = new YouTubePlayer(parentId);
		newPlayer.ready();
	<% end %>
<% else %>
	alert("<%= @error %>");
<% end %>
