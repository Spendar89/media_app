<div style="width: 100%">
	<div id="trending-pages">
		<% if @recent_pages.nil? %>
			<div style="float: left; width: 100%; margin-left: 1%">
				<div class="row" style=" margin-bottom: 1%">
					<h2> #<%= @tag %> </h2>
				</div>
		<% else %>
		<div style="float:right; width: 15%;">
		<div class="row">
				<h4>Trending Pages:</h4>
				<%= @auth unless current_user.nil? %>
		</div>
			<% @recent_pages.each do |page| %>
				<div class="row">
					<h5 class="subheader"><%= link_to page[:name], page_path(page), :method => "get", :style=>"color:grey" %></h5>
				</div>
			<% end %>
		<% end %>
		</div>
	</div>
		<%= will_paginate @media %>
	<div class="media_div" style="width: 85%; float: left">
		<div id="masonry-container" class="masonry media_div infinite-scroll clearfix" data-page_id="index" data-query="<%= @recent_pages.nil? ? @tag : false %>">
			<% for medium in @media %>
				<% unless medium["type"].nil? %>
					<% if medium["type"] == "youtube" %>
						<%= render :partial => "videos/show", :locals => {:video => medium, :poll_redis => false} %>
					<% elsif medium["type"] == "soundcloud" %>
						<%= render :partial => "sounds/show", :locals => {:sound => medium} %>
					<% end %>
				<% end %>
			<% end %>	
		</div>
	</div>
</div>