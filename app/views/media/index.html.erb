<div class="row">

		<% if @recent_pages.nil? %>
			<div class="twelve columns">
				<div class="row" style=" margin-bottom: 1%">
					<h2> #<%= @tag %> </h2>
				</div>
			</div>
		<% end %>
		<%= will_paginate @media %>
	<div class="media_div ten columns">
		<div id="masonry-container" class="masonry media_div infinite-scroll clearfix" data-page_id="index" data-query="<%= @recent_pages.nil? ? @tag : false %>">
			<% for medium in @media %>
				<% unless medium["type"].nil? %>
					<% if medium["type"] == "youtube" %>
						<%= render :partial => "videos/show", :locals => {:video => medium, :poll_redis => false} %>
					<% elsif medium["type"] == "soundcloud" %>
						<%= render :partial => "sounds/show", :locals => {:sound => medium} %>
					<% end %>
				<% end %>
			<% end %>	
		</div>
	</div>
	<div class="row two columns end">
		<div class="twelve columns panel radius">
			<h4>Recommended</h4>
		<% unless @ranked_pages.nil? %>
			<% @ranked_pages.each do |page| %>
		      		<h4 class="subheader"><%= link_to page[:name], page_path(page), :method => "get" %></h4>
			<% end %>
		<% end %>
		</div>
	</div>
</div>