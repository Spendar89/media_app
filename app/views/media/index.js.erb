<% if @filtered %>
	$('#masonry-container').children().remove();
<% end %>

<% for medium in @media %>
	<% unless medium["type"].nil? %>
		<% if medium["type"] == "youtube" %>
			$('#masonry-container').append("<%= j render(:partial => 'videos/show', 
											:locals => {:video => medium, :poll_redis => true}) %>");
		<% elsif medium["type"] == "soundcloud" %>
			$('#masonry-container').append("<%= j render(:partial => 'sounds/show', 
											:locals => {:sound => medium}) %>");
		<% end %>
		$('#masonry-container').masonry('reload');
	<% end %>
<% end %>

<% if @media.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate(@media) %>');
<% else %>
  $('.pagination').remove();
<% end %>

