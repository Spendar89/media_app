<div id="login_div" style="float: right">
	<% if current_user %>
	Signed in as <%= current_user.name %>
	<%= link_to "Sign Out", signout_path %>
	<% else %>
	<%= link_to "Sign in with Facebook", "/auth/facebook" %>
	<% end %>

	<% unless current_user.nil? %>
	<% if current_user.id == 1 || current_user.id == 2 %>
	<div class="flush-db-button">
		<%= form_tag "videos/flush_db" do %>
		<%= password_field_tag :password %>
		<%= submit_tag "clear db" %>
		<% end %>
	</div>
	<% end %>
	<% end %>
</div>
<div class = "search_form" style="margin-bottom: 2%;">
	<%= render :partial => 'add_media_form' %>
</div>

<div class="page-title-div">
	<h2><%= @page.name %> </h2>
</div>

<div id="masonry-container" class="centered clearfix masonry media_div">
<% @media.each do |media| %>

	<% if media["type"] == "youtube" %>
		
<div class="yt_parent box col4" data-uploaded="<%= media['uploaded']%>" data-start="<%= media['start']%>">
	<div class="title-div"><%= media['title'] %> </div>
	<div class="overlay <%= media['aspect_ratio'] unless media['aspect_ratio'].nil? %>_overlay"></div>
	<iframe id="<%= media['yt_id'] %>" class="yt-video <%= media['aspect_ratio'] unless media['aspect_ratio'].nil? %>" src="http://www.youtube.com/embed/<%= media['yt_id']%>?enablejsapi=1&start=<%= media['start'] %>&controls=0&autoplay=0&modestbranding=1&rel=0&showinfo=0&html5=1&vq=small&hd=0&amp;wmode=transparent" frameborder="0"></iframe>
	<div class="info-div">
		<table class="info-table">
			<tr><td><%= media['description'] %></td></tr>
		</table>
		<div class="info-user">
			<div class="user-thumbnail">
				<%  user_image = User.find_by_name("#{media['user']}").image unless media['user'].nil? %>
				<img src="<%=user_image %>" style="height:30px; width:30px">
			</div>
			<div class="user-submit-date"><%= media['user'] %> on <%= Time.at(media['uploaded'].to_i).to_date %></div>
		</div>
	</div>
</div>
	<% elsif media["type"] == "soundcloud" %>
<div class="sc_parent box col3" data-uploaded="<%= media['uploaded']%>">
	<div class="title-div"><%= media['title'] %> </div>
	<div class="sc_overlay"></div>		
	<object height="90" width="97%" data-start="<%= media['start'] %>" id="<%= media['sc_id'] %>" class="sc-player"   classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000">
		<param name="movie" value="http://player.soundcloud.com/player.swf?url=<%= media['url']%>&enable_api=true&auto_play=true&single_active=false&object_id=<%= media['sc_id'] %>"></param>
		<param name="allowscriptaccess" value="always"></param>
		<embed allowscriptaccess="always" height="90" src="http://player.soundcloud.com/player.swf?url=<%= media['url']%>&sharing=false&buying=false&liking=false&download=false&show_artwork=false&show_comments=false&show_playcount=false&show_user=false&enable_api=true&auto_play=true&single_active=false&object_id=<%= media['sc_id'] %>" type="application/x-shockwave-flash" width="97%" name="<%= media['sc_id'] %>"></embed>
	</object>
	<div class="info-div">
		<table class="info-table">
			<tr><td><%= media['description'] %></td></tr>
		</table>
		<div class="info-user">
			<div class="user-thumbnail">
				<%  user_image = User.find_by_name("#{medias['user']}").image unless media['user'].nil? %>
				<img src="<%=user_image %>" style="height:30px; width:30px">
			</div>
			<div class="user-submit-date"><%= media['user'] %> on <%= Time.at(media['uploaded'].to_i).to_date %></div>
		</div>
	</div>
</div>
<% end %>
<% end %>
</div>