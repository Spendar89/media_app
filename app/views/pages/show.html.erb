<div class="row">
	<div class="twelve columns">
		<div class="eight columns" style="margin-top: -1%">
			<div class="six columns">
				<h1><%= @page.name %></h1>
			</div>
			<div class="six columns end">
				<h4 class="subheader" style="line-height: 60px">created by <%= User.find(@page.user_id).name %> </h4>
			</div>
		</div>
		<div class="four columns">
			<h4><a style="color: #999" href="#" data-reveal-id="add_media_div" data-animation="fade">Add a Song or Video</a></h4>
		</div>
	</div>
</div>
<%= will_paginate @media %>
<div id="masonry-container" class="masonry media_div infinite-scroll clearfix" data-page_id="<%= @page.id %>" style="margin-left: 2%">
<% for medium in @media %>
	<% unless medium["type"].nil? %>
		<% if medium["type"] == "youtube" %>
			<%= render :partial => "videos/show", :locals => {:video => medium, :poll_redis => false} %>
		<% elsif medium["type"] == "soundcloud" %>
			<%= render :partial => "sounds/show", :locals => {:sound => medium} %>
		<% end %>
	<% end %>
<% end %>
</div>
<div id="add_media_div" class="reveal-modal xlarge">
  	<div class = "row add-media-partial-div">
		<%= render :partial => 'add_media_form', :locals => {:page_id => @page.id} %>
	</div>
</div>